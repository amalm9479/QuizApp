<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseYourQuiz">

    <ImageView
        android:id="@+id/FalgQuizImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/ic_flag_of_kuwait"
        app:layout_constraintBottom_toTopOf="@+id/grammerQuizImageView"
        app:layout_constraintEnd_toStartOf="@+id/carQuizImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/carQuizImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_flag_of_brazil"
        app:layout_constraintEnd_toEndOf="@+id/animalQuizImageView"
        app:layout_constraintTop_toTopOf="@+id/FalgQuizImageView" />

    <ImageView
        android:id="@+id/grammerQuizImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="348dp"
        android:src="@drawable/ic_flag_of_thailand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/animalQuizImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/ic_flag_of_fiji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toEndOf="@+id/grammerQuizImageView"
        app:layout_constraintTop_toTopOf="@+id/grammerQuizImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>